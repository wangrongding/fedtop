{
  "editor.copyWithSyntaxHighlighting": false,
  "editor.formatOnSave": false,
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "files.eol": "\n",
  "cSpell.words": ["ohmyzsh", "pnpm", "reco", "Rongding", "tunlp", "vuepress"],
  "workbench.colorCustomizations": {
    "editorBracketMatch.border": "#00ff66",
    //设置用户选中代码段的颜色
    "editor.selectionBackground": "#00ff5950",
    //搜索匹配的背景色
    "editor.findMatchBackground": "#ff9900",
    "editor.findMatchHighlightBackground": "#ff990090",
    "editor.findRangeHighlightBackground": "#ff9900"
  }
}
